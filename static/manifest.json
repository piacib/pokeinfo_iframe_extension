{
  "name": "Pokeinfo Extension",
  "description": "Pokeinfo Extension",
  "version": "0.1.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "serviceWorker.js"
  },
  "content_scripts": [
    {
      "js": ["contentScript.js"],
      "css": ["styles/contentScript.css"],
      "run_at": "document_idle",
      "matches": ["https://play.pokemonshowdown.com/*"]
    }
  ],
  "permissions": [],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "action": {
    "default_title": "Pokeinfo Extension",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/icons/bolt_icon_128.png",
      "32": "/icons/bolt_icon_128.png",
      "48": "/icons/bolt_icon_128.png",
      "128": "/icons/bolt_icon_128.png"
    }
  },
  "icons": {
    "16": "/icons/bolt_icon_128.png",
    "32": "/icons/bolt_icon_128.png",
    "48": "/icons/bolt_icon_128.png",
    "128": "/icons/bolt_icon_128.png"
  }
}
